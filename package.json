{
  "name": "@cprecioso/canvas-text-layout",
  "version": "1.0.1",
  "description": "A mini text layout engine for canvas",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cprecioso/canvas-text-layout.git"
  },
  "homepage": "https://github.com/cprecioso/canvas-text-layout#readme",
  "bugs": {
    "url": "https://github.com/cprecioso/canvas-text-layout/issues"
  },
  "author": "Carlos Precioso <kalprestito@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@4.1.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "default": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    }
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "keywords": [
    "canvas",
    "text",
    "layout",
    "multiline"
  ],
  "scripts": {
    "build": "tsup",
    "prepack": "tsup",
    "watch": "tsup --watch"
  },
  "devDependencies": {
    "@cprecioso/tsconfig": "^2.0.1",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "prettier-plugin-pkg": "^0.18.1",
    "prettier-plugin-sh": "^0.14.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "sideEffects": false
}
